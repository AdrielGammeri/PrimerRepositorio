<div class="container" style="margin: 50px auto;">
    <div class="row2">
            <p class="text-end"> Bienvenido {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">Log Out
                <i class="fas fa-sign-out-alt"></i></a></p>
        </div>


    <div class="row1">
        <div class="col-7">
            <h4>Novedades</h4>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa plus" aria-hidden="true"></i> Nuevo </a>
        </div>
    </div>


    <div class="row1">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">ID</th>
                        <th scope="col">TITULO</th>
                        <th class="text-end">EDICION</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-secondary" href="">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>