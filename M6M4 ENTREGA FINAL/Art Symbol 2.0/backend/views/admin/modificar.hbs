<div class="holder">
    <div class="til">
        <h1 class="TiL" style="text-align: center;">Modificar una Novedad</h1>
    </div>
    <div class="Containar" style="margin-top: 40px;">
        <div class="row2">
            <div class="col-6-offset-3">
                <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
                    <input type="hidden" value="{{novedad.id}}" name="id"></input>
                    <div class="form-group">
                        <label for="">Titulo</label>
                        <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control"
                            name="titulo"></input>
                    </div>
                    <div class="form-group">
                        <label for="">Subtitulo</label>
                        <textarea placeholder="SubTitulo" class="form-control"
                            name="subtitulo">{{novedad.subtitulo}}"</textarea>
                    </div>
                    <div class="form-group">
                        <label for="">Cuerpo</label>
                        <textarea placeholder="Cuerpo" class="form-control" name="cuerpo">{{novedad.cuerpo}}"</textarea>
                    </div>
                    <div class="form-group">
                        <p>
                            <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                        </p>
                        <p>
                            <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen
                                actual ? </input></label>
                            <input type="hidden" name="img_original" value="{{novedad.img_id}}"></input>
                        </p>
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
                {{#if error}}
                <p>{{message}}</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>